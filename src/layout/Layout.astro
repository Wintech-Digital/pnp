---
import { ViewTransitions } from 'astro:transitions';
import Header from '@components/header/Header';
import Footer from '@components/footer/Footer.astro';
import AccordionContainer from '@components/accordion/AccordionContainer.astro';
import WithBottomSpace from '@components/spaces/WithBottom.astro';
import Breadcrumbs from '@components/breadcrumbs/Breadcrumbs.astro';
 
interface Props {
    title?: string;
}

const {props, generator} = Astro;
const { title = 'Empty title' }: Props = props;
---
<html lang="en" class="w-full">
	<head>
		<meta name="robots" content="nofollow" />
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
		<meta name="generator" content={generator} />
		<title>{ title }</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="icon"
			type="image/svg"
			sizes="32x32"
			href="./images/logo.svg"
		/>
		<ViewTransitions />
	</head>
	<body class="py-4 pl-4 pr-4 sm:p-4 md:p-6 lg:p-10 bg-pnp-card-bg text-pnp w-full">
		<div class="max-w-[1360px] mx-auto">
			<!-- <Header client:load />
			<Breadcrumbs /> -->
			<main>
				<slot/>
			</main>
			<WithBottomSpace>
				<AccordionContainer/>
			</WithBottomSpace>
			<Footer />
		</div>
	</body>
</html>
