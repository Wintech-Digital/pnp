---
import RichText from "@components/richtext/RichText.astro";
import { Image } from 'astro:assets';
import { getFields } from "@utils";
import imgicon1 from '@assets/images/slides/icons/icon777-1.svg';
import imgicon2 from '@assets/images/slides/icons/icon777-2.svg';
import imgicon3 from '@assets/images/slides/icons/icon777-3.png';
import imgicon4 from '@assets/images/slides/icons/icon777-4.svg';

const {data} = Astro.props;
const availablegamestitle = data?.availablegamestitle;
const availablegameslist = data?.availablegameslist;
const iconsList = [imgicon1, imgicon2, imgicon3, imgicon4];
const seoTitles = [
    {
        alt: "número 777 em um slot que geralmente é considerado um símbolo de boa sorte e energia positiva",
        title: "777: Símbolo de Boa Sorte em Slot"
    },
    {
        alt: "Baralho de cartas",
        title: "Baralho de Cartas"
    },
    {
        alt: "vista superior dos jogos de mesa em um cassino",
        title: "Vista Superior de Jogos de Mesa em Cassino"
    },
    {
        alt: "novo ícone de jogos",
        title: "Novo Ícone de Jogos"
    },
];

---
<RichText
    data={availablegamestitle}
    classList="mb-4 sm:mb-8"
/>
<section class="bg-pnp/[.03] border border-pnp/[.1] relative rounded-[24px] sm:rounded-[30px] px-[24px] py-[24px] sm:px-[32px] sm:py-[32px] bg-gradient-to-bl from-pnp-red/[.4] to-50% ">
    <ul class="flex flex-col gap-[24px]">
        {
            availablegameslist.map((item, index)=>{
                const picinfo = getFields(item?.coverImage?.data?.attributes);
                return (
                    <li class="flex flex-col sm:flex-row gap-4 border-t border-[#ffffff]/[.2] pt-4 first:border-t-0 first:pt-0">
                        <div class="relative bg-pnp-black/[.2] flex items-center justify-center h-[100px] w-[100px] min-w-[100px] rounded-full">
                            <Image
                                src={iconsList[index]}
                                width={picinfo.w}
                                height={picinfo.h}
                                loading="lazy"
                                alt={picinfo.alternativeText || ''} 
                                title={seoTitles[index].title || ''} 
                                class="z-10"
                            />
                            </div>
                        <div>
                            <RichText
                                data={item.description}
                                styles={{
                                    h3: 'mb-4'
                                }}
                            />
                        </div>
                    </li>
                )
            })
        }
    </ul>
</section>