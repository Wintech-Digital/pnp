        image: 'hot-fruits',
    },
    {
        url: '/',
        title: '9 coins',
        image: 'coins',
    },
];
---
<Article>
    <HeroContainer
        title={heroTitle}
        description={heroDescription}
        pics={[heroImage1, heroImage2]}
    />
    <ArticleItem>
        <div class="overflow-hidden pt-4">
            <ArticleItem titleH2="Ofertas especiais">
                <SliderContainer
                    client:load
                    list={sliderList}
                    noInfiniti={true}
                    itemComponentName="SliderItem"
                />
            </ArticleItem>
        </div>
    </ArticleItem>
    <ArticleItem titleH2="Avaliação de máquinas caça-níqueis">
        <SpaceBlock>
            <Slots list={slotsList} />
        </SpaceBlock>
   </ArticleItem>
</Article>