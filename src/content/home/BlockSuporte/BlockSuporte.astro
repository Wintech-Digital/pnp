---
import RichText from "@components/richtext/RichText.astro";
import TwoColomns50 from "@components/sections/TwoColomns50.astro";
const {data} = Astro.props;
const supportArticle = data?.supportArticle || [];
const heading = supportArticle.filter(item=> item.type === 'heading');
const paragraph = supportArticle.filter(item=> item.type === 'paragraph');
const image = supportArticle.filter(item=> item.type === 'image');
---
<RichText
    data={heading}
/>
<TwoColomns50>
    <RichText
        data={image}
        slot="first-col"
    />
    <RichText
        data={paragraph}
        slot="second-col"
    />
</TwoColomns50>