---
import Article from "@components/article/Article.astro";
import Table from '@components/table/TableDynamic.astro';
import ButtonRounded from '@components/buttons/ButtonRounded.tsx';
const {data} = Astro.props;
const title = data?.title || '';
const description = data?.description || [];
const table = data?.table || [];
---
<Article>
    <h1 class="text-34-37-700 sm:text-40-48-700 mb-[24px] w-3/4">
      {title}
    </h1>
    { !!description?.length && description.map(item=>{
        const paragraph = item?.children || [];
        return paragraph.map(p => {
          return(
            <p class='text-16-24-400 text-pnp-grey20 mb-[32px]'>
              {p.text}
            </p>
          )
        })
      })
    }

    <Table data={table}/>

    <div class='flex flex-row justify-center my-4 mr-4 sm:mr-0 '>
        <ButtonRounded
            size="xl" 
            color="red" 
            title="Jogue agora" 
            className='w-full sm:w-auto'
        />
    </div>

</Article>
