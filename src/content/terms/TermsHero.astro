---
import HeroContainer from "@components/hero/HeroContainer.astro";
import WithBottom from "@components/spaces/WithBottom.astro";
import {parseImageData} from '@utils';

const {data} = Astro.props;
const bannerdescription = data?.bannerdescription;
const bannerCover = data?.bannerCover;
const mobile = parseImageData(bannerCover.data, 'mobile');
const desktop = parseImageData(bannerCover.data, 'desktop');
const pictures = [ mobile, desktop];
---
<WithBottom>
    <HeroContainer
        heroText={bannerdescription}
        coverSeo={data?.coverSeo}
        pictures={pictures}
        textTopSpaceMobile={"-mt-[65%]"}
        textBoxWidth={"w-[350px] sm:w-2/3 lg:w-[480px]"}
    />
</WithBottom>

