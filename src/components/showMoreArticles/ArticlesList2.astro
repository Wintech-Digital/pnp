---
<section class="card border border-[#ffffff]/[.2] relative rounded-[24px] sm:rounded-[30px] px-[24px] py-[24px] sm:px-[32px] sm:py-[32px] hover:bg-gradient-to-bl from-pnp-red/[.4] to-50% ">
    <ul class="flex flex-col gap-[24px]">
        { list.map(item => (
            <li class="flex flex-col sm:flex-row gap-4 border-t border-[#ffffff]/[.2] pt-4 first:border-t-0 first:pt-0">
                <div class="relative bg-pnp-black/[.2] flex items-center justify-center h-[100px] w-[100px] min-w-[100px] rounded-full">
                    <Image
                        src={item.img}
                        format='webp'
                        alt="imagepng."
                        class="z-10"
                    />
                </div>
                <div>
                    <h2 class="text-24-26-700 sm:text-28-34-700 text-pnp mb-4">
                        {item.title}
                    </h2>
                    <p class="text-16-24-400 text-pnp-grey20">
                        {item.body}
                    </p>
                </div>
            </li>
        ))}
    </ul>
</section>

