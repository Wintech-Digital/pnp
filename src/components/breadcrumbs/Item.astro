---
import ItemBody from './ItemBody.astro';
export interface ItemProps {
    key: string;
    name: string;
    path?: string;
}
const {pathname} = Astro.url;
const { key, name } = Astro.props as ItemProps;
const path = key !== 'home' ? `/${key}` : '/'; 
const isCurrentPage = pathname === path;
const classList = "flex items-center space-x-2 text-[14px] font-normal leading-[22px]";
---
{ !isCurrentPage 
    ? (
        <a href={path} class={`${classList} text-pnp-grey20/[.5] hover:text-pnp hover:underline`}>
            <ItemBody key={key} name={name} />
        </a>
    ) : (
        <span class={`${classList} text-pnp`}>
            <ItemBody key={key} name={name} />
        </span>
    )
}
