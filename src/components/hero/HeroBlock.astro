---
import { getImage } from "astro:assets";
import bgHero1 from "@assets/images/home-bg-hero1.png";
import bgHero2 from "@assets/images/home-bg-hero2.png";
import ButtonRounded from '@components/buttons/ButtonRounded.tsx';
import SpaceBlock from "@components/spaces/SpaceBlock.astro";

interface Props {
    title: string;
    descriptoin: string;
}

const {title, descriptoin} = Astro.props as Props;
const bgImage1 = await getImage({ src: bgHero1, format: 'webp' });
const bgImage2 = await getImage({ src: bgHero2, format: 'webp' });
const rounded = `rounded-[32px] md:rounded-[48px]`;
const paddings = `px-4 pb-4 pt-[218px] sm:px-[56px] sm:py-[48px]`;
const margins = ' mb-[80px] sm:mb-[80px] md:mb-[90px] lg:mb-[100px]';
const bgImageSize = `bg-[length:auto_200px,auto_350px] sm:bg-[length:auto]`;
const bgImagePosition = `bg-[position:_right_90px_top_0px,_right_-30px_top_-150px] md:bg-[position:_right_90px_top_0px,_right_-30px_top_0px]`;
const hover = `hover:gr-red-green-coner`;
const transition = 'transition duration-150 ease-in-out';
const border = `border border-[#fff]/[.2]`;
---
<SpaceBlock>
    <div 
        class=`mr-0 bg-[#161b1b] bg-no-repeat ${border} ${margins} ${bgImageSize} ${bgImagePosition} ${rounded}`
        style={`background-image: url('${bgImage2.src}'), url('${bgImage1.src}')`}
    >
        <div class=`${paddings} ${rounded} ${transition} ${hover}`>
            <div class="max-w-[585px] flex flex-col items-start gap-4">
                <h1 class="text-40-44-700 sm:text-50-56-700">  
                    {title}
                </h1>
                <p class='text-16-24-400'>
                    {descriptoin}
                </p>
                <ButtonRounded size="xl" color="red" title="Jogue agora" className="w-full sm:w-auto" />
            </div>
        </div>
    </div>
</SpaceBlock>