---
interface Props{
    titleH1?: string;
    titleH2?: string;
    description?: string;
}
const {titleH1, titleH2, description} = Astro.props as Props;
---
<div class="mb-[80px] sm:mb-[80px] md:mb-[90px] lg:mb-[100px]">
   {titleH1 && <h1 class="text-34-37-700 sm:text-40-48-700 mb-[24px]" >{titleH1}</h1>}
   {titleH2 && <h2 class="text-34-37-700 sm:text-24-36-700 mb-[24px]">{titleH2}</h2>}
   {description && <p class='text-16-24-400 text-pnp-grey20 mb-[32px]'>{description}</p>}
    <slot/>
</div>