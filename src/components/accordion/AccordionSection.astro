---
interface Props {
    title: string;
    body: string;
}
const {title, body} = Astro.props as Props;

const transition = 'transition-all duration-150 ease-in-out';
const hovers = 'hover:gradient-green-coner-4';
const rounded = 'rounded-[24px] sm:rounded-[30px]';
const paddings = 'px-4 py-4 sm:px-8 sm:py-8';
---
<>
<h2 class="text-34-37-700 sm:text-40-48-700 mb-12 sm:mb-4">{title}</h2>
<section class=`border border-zinc-700 bg-gray-100 bg-opacity-5 ${rounded} ${hovers} ${transition} ${paddings}`>
    <p>
        {body}
    </p>
</section>
</>