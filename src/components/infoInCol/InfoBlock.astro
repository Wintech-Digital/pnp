---
import InfoItem from '@content/home/BlockCasinoInfo/InfoItem.astro';

interface ItemProps {
    bgStyle: string;
    title: string;
    image: ImageMetadata;
    description: string;
}

interface Props {
    infoTitle: string;
    infoData: ItemProps[];
}
const {infoTitle, infoData} = Astro.props as Props;
---
<>
    <h1 class='text-34-37-700 sm:text-40-48-700 mb-[48px] sm:mb-[90px]'>
        {infoTitle}
    </h1>
    <div class="overflow-hidden overflow-x-scroll sm:overflow-visible">
        <div class="flex flex-row gap-7 mt-[50px] sm:mt-0">
            {infoData.map(item => (
                <InfoItem
                    bgStyle={item.bgStyle}
                    title={item.title}
                    image={item.image}
                    description={item.description}
                />
            ))}
        </div>
    </div>
</>
