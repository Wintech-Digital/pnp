---
import LiBulletChecked from "./LiBulletChecked.astro";
import LiBulletNumbered from "./LiBulletNumbered.astro";
import LiRegular from "./LiRegular.astro";
const {block, bullet = null} = Astro.props;
const disk = 'list-disc marker:text-pnp-green';
const numbered = 'list-decimal';

function getStyle(format){
    switch(format){
        case 'unordered':
            return disk; 
        case 'ordered':
            return numbered;
        default:
            return '' 
    }
}
---
<ul class=`pl-0 sm:pl-6 space-y-3 text-pnp-grey20 ${ getStyle(block.format)}` slot='first-col'>
    {block.children.map((item, index) => {
        if(bullet === 'numbered'){
            return (
                <LiBulletNumbered
                    data={item}
                    index={index}
                />
            )
        }
        if(bullet === 'checked'){
            return (
                <LiBulletChecked
                    data={item}
                    index={index}
                />
            )
        }
        return (
                <LiRegular
                    data={item}
                />
            )
    })}
</ul>
