---
import { Image } from "astro:assets";
const {block, styles = null} = Astro.props;
const {
    ext = '',
    url = '', 
    caption = '', 
    alternativeText = '', 
    width = 0,
    height = 0,
} = block.image;
const stylesImg = styles ? styles['image'] : '';
---
<div class='flex flex-col-reverse sm:flex-col'>
    { url && ext !== '.webp' 
        ? <Image
            src={url}
            width={width}
            height={height}
            alt={alternativeText}
            loading="lazy"
            sizes={`(min-width: 640px) and (max-width: 768px) 382px, (max-width: 1024px) 392px`}
            class={`w-full min-w-[250px] border border-pnp/[.1] rounded-[24px] sm:rounded-[32px] ${stylesImg}`}
        />
        : <img
            src={url}
            width={width}
            height={height}
            alt={alternativeText}
            class="w-full rounded-[24px] border border-pnp/[.1] mb-4"
        />
    }

    { caption && 
        <h3 class='text-pnp text-24-26-700 mb-[24px] sm:text-28-34-700 sm:mt-[32px]'>
            {caption}
        </h3>
    }
</div>
