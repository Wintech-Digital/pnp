---
import Link from "./Link.astro";
const {block, styles} = Astro.props;
const stylesP = styles ? styles['paragraph'] : '';
---
<p class={`text-16-24-400 text-pnp-grey20 ${stylesP}`} slot='first-col'>
    {block.children.map(item => {
        if(item.type === 'link'){
            return <Link data={item} />
        }
        return item.text
    })}
</p>