---
import List from '@components/richtext/List/List.astro';
import Heading from '@components/richtext/Heading/Heading.astro';
import Paragraph from '@components/richtext/Paragraph/Paragraph.astro';
import ImageBlock from '@components/richtext/ImageBlock/ImageBlock.astro';

const {data, listBullet = null, classList = '', styles = null} = Astro.props;
---
{
    data?.map(block => {
        switch(block.type) {
	    	case 'heading':
                return (
                    <Heading
                        block={block}
                        classList={classList}
                        styles={styles}
                    />
                );
	    	case 'paragraph':
                return (
                    <Paragraph
                        block={block}
                        styles={styles}
                    />
                );
	    	case 'list':
                // console.log('listBullet text ::::', block, listBullet)
                return (
                    <List
                        block={block}
                        bullet={listBullet}
                        styles={styles}
                    />
                );
	    	case 'image':
                // console.log('block', block)
                return (
                    <ImageBlock
                        block={block}
                        styles={styles}
                    />
                );
		    default:
                return null;
        }
    })
}