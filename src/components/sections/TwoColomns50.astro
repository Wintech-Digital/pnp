---
interface Props {
    reverse?: boolean;
    stretch?: boolean;
}
const {reverse, stretch} = Astro.props;
const isReverse = reverse ? 'flex-col-reverse' : 'flex-col'
const isStretch = stretch ? 'stretch' : 'center'
---

<div class=`flex ${isReverse} sm:flex-row sm:items-${isStretch} gap-8`>
    <div class='sm:w-1/2'>
        <slot name="first-col"/>
    </div>
    <div class='sm:w-1/2'>
        <slot name="second-col"/>
    </div>
</div>

