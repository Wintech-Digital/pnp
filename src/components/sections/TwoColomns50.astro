---
const {reverse} = Astro.props;
const isReverse = reverse ? 'flex-col-reverse' : 'flex-col'
---
<div class=`flex ${isReverse} sm:flex-row sm:items-center gap-8 mb-[80px] sm:mb-[100px]`>
        <div class='sm:w-1/2'>
            <slot name="first-col"/>
        </div>
        <div class='sm:w-1/2'>
            <slot name="second-col"/>
        </div>
    </div>

