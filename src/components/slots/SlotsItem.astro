---
import { SLOTS_URL } from '@constants';
import ButtonRounded from '@components/buttons/ButtonRounded';
const {name, url} = Astro.props;
---
<div class="text-center hover:text-pnp-red hover:underline transition-colors duration-150 ease-in-out">
    <div class="text-center relative overflow-hidden">
        <slot/>
        <div class="opacity-0 h-[calc(100%-16px)] hover:opacity-100 transition-opacity duration-150 ease-in-out bg-black/50 absolute z-0 top-[1px] bottom-[1px] left-[1px] right-[1px] flex justify-center flex-col gap-4 items-center rounded-[24px]">
            <ButtonRounded link={`${SLOTS_URL}${url}/`} size="sm" color="red" title="Jogar"  className='w-36'/>
            <ButtonRounded link={`${SLOTS_URL}${url}/`} size="sm" color="green" title="Detalhes"  className='w-36'/>
        </div>
    </div>
    <a href={`${SLOTS_URL}${url}/`} class="text-base font-semibold">
        {name}
    </a>
</div>