---
interface ListItemProps {
    url: string;
    title: string;
    image: string;
}
interface Props {
    name: string;
    list: ListItemProps[];
}
import { Image } from "astro:assets";
import SlotsItem from "./SlotsItem.astro";
import hellHot from "@assets/images/hell-hot.png";

const {name, list} = Astro.props as Props;
---
<>
    <h1 class="text-34-37-700 sm:text-24-36-700 mb-[32px]">
        {name}
    </h1>
    <ol class="grid grid-cols-2 gap-4 sm:gap-[30px] md:grid-cols-3 lg:grid-cols-4">
        { list.map(item => (
            <li class="col-span-1 flex flex-col rounded-lg text-center" >
                <SlotsItem url={item.url} name={item.title}>
                    <Image
                        src={hellHot}
                        format='webp'
                        alt="hell hot"
                        class="rounded-[24px] sm:rounded-[32px] border border-gray-500 mb-4"
                    />
                </SlotsItem>
            </li>
        ))}
    </ol>
</>

